<h1>Add You're Opinion!</h1>
<h3>Name: <%=@restaurant.name%></h3>
<%= link_to "<- Back", restaurant_path(params[:restaurant_id])%>

<%= form_for [@restaurant, @review] do |f| %>


  <%= f.radio_button(:rating, 1) %>
  <%= f.label(:rating_star, "1 Star") %>

  <%= f.radio_button(:rating, 2) %>
  <%= f.label(:rating_star, "2 Stars") %>

  <%= f.radio_button(:rating, 3) %>
  <%= f.label(:rating_star, "3 Stars") %>

  <%= f.radio_button(:rating, 4) %>
  <%= f.label(:rating_star, "4 Stars") %>

  <%= f.radio_button(:rating, 5) %>
  <%= f.label(:rating_star, "5 Stars") %><br>

  <%=f.label :body%><br>
  <%=f.text_area :body%><br>

  <br><%= f.submit 'Submit!' %>
<%end%>
<%= notice %>



